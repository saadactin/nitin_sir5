# PostgreSQL Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=sync_db
POSTGRES_USER=migration_user
POSTGRES_PASSWORD=StrongPassword123
POSTGRES_PORT=5432
POSTGRES_SCHEMA=CompanyDB

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=0
HYBRID_SYNC_BATCH_SIZE=10000

# Email Notification Settings (Optional)
# Configure these if you want email notifications for sync status
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=sql-pg-sync@your-company.com

# Slack Notification Settings (Optional)
# Configure this if you want Slack notifications for sync status
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# pgAdmin Configuration (if using pgAdmin service)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Security Settings
# Change this to a secure random string in production
FLASK_SECRET_KEY=supersecretkey-change-in-production

# Logging Level
LOG_LEVEL=INFO